<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='{{static "stylesheets/searchticket.css"}}' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'
    ></script>
  </head>

  <body>

    <div class='container'>
      <h1 class='text-center mb-3 mt-2'>Tra cứu thông tin đặt vé</h1>
      <div class='input-group mx-auto'>
        <input
          type='search'
          class='form-control'
          placeholder='Nhập mã đặt chỗ tại đây...'
          aria-label='Search'
          aria-describedby='search-addon'
          id='searchFlightInput'
        />
        <button
          type='button'
          class='btn btn-outline-primary'
          id='searchFlightButton'
        >Tra cứu</button>
      </div>

      <table class='table table-bordered border-dark mt-5' id='flightDataTable'>
      </table>

      <table class='table table-bordered border-dark' id='userTable'>
        <tr class='text-center row-color'>
          <th>MÃ KHÁCH HÀNG</th>
          <th>TÊN KHÁCH HÀNG</th>
          <th>TỔNG SỐ GHẾ</th>
          <th>HẠNG</th>
          <th>GIÁ</th>
          <th>TÌNH TRẠNG</th>
        </tr>
        <tr class='text-center'>
          {{! <td>KH001</td>
                <td>Huỳnh Thị Thảo Ngân</td>
                <td>3</td>
                <td>Phổ thông</td>
                <td>12.000.000đ</td>
                <td class="text-pay">Đã thanh toán</td> }}
        </tr>
      </table>
    </div>

    <script src='/javascripts/searchTicket.js'></script>
  </body>
</html>