<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Admin Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel='stylesheet' href='{{static "stylesheets/admin.css"}}' />
    <link rel="stylesheet" href="/stylesheets/variable.css"/>
</head>
<body>
    <input type="checkbox" id="sidebar-toggle">
    <div class="sidebar">
        <div class="sidebar-header">
            <h3 class="brand">
                <span class="fa fa-plane"></span> 
                <span>SVO Airlines</span>
            </h3> 
            <label for="sidebar-toggle" class="ti-menu-alt label-toggle"></label>
        </div>
        
        <div class="sidebar-menu">
            <ul>
                <li>
                    <div class="menu-items active" id="sidebar-home">
                        <span class="fa fa-home"></span>
                        <span>Trang chủ</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items" id="sidebar-flight">
                        <span class="fa fa-plane"></span>
                        <span>Quản lý chuyến bay</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items" id="sidebar-location">
                        <span class="fa fa-map-marker"></span>
                        <span>Quản lý địa điểm</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items" id="sidebar-customer">
                        <span class="fa fa-user"></span>
                        <span>Quản lý khách hàng</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items" id="sidebar-ticket">
                        <span class="fa fa-ticket"></span>
                        <span>Quản lý lịch sử mua vé</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items" id="sidebar-statistical">
                        <span class="fa fa-money"></span>
                        <span>Thống kê</span>
                    </div>
                </li>
                <li>
                    <div class="menu-items">
                        <span class="fa fa-sign-out"></span>
                        <span>Logout</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    
    
    <div class="main-content">
        
        <header>
            <div class="search-wrapper">
                <span class="ti-search"></span>
                <input type="search" placeholder="Search">
            </div>
            
            <div class="social-icons">
               <strong>Admin SVO</strong>
               <div></div>
            </div>
        </header>
        
        <div id="home" class="tabs">
            <main>
            
                <h2 class="dash-title">Tổng quan</h2>
                
                <div class="dash-cards">
                    <div class="card-single">
                        <div class="card-body">
                            <span class="fa fa-plane"></span>
                            <div>
                                <h3>Quản lý chuyến bay</h3>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div id="sidebar-flight">View all</div>
                        </div>
                    </div>
                    
                    <div class="card-single">
                        <div class="card-body">
                            <span class="fa fa-map-marker"></span>
                            <div>
                                <h3>Quản lý địa điểm</h3>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div id="sidebar-location">View all</div>
                        </div>
                    </div>
    
                    <div class="card-single">
                        <div class="card-body">
                            <span class="fa fa-user"></span>
                            <div>
                                <h3>Quản lý khách hàng</h3>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div id="sidebar-customer">View all</div>
                        </div>
                    </div>
    
                    <div class="card-single">
                        <div class="card-body">
                            <span class="fa fa-ticket"></span>
                            <div>
                                <h3>Quản lý lịch sử mua vé</h3>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div id="sidebar-ticket">View all</div>
                        </div>
                    </div>
    
                    <div class="card-single">
                        <div class="card-body">
                            <span class="fa fa-money"></span>
                            <div>
                                <h3>Thống kê</h3>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div id="sidebar-statistical">View all</div>
                        </div>
                    </div>
                </div>
            </main>
        </div>


    {{> flight_table}} 
{{!-- location --}}
    {{> location_table}}  
{{!-- customer --}}
    {{> customer_table}}
{{!-- ticket --}}
    {{> ticket_table}}
{{!-- stctistical --}}
    {{> stctistical_table}}
    </div>

{{!-- các chức năng thêm xóa sửa cho các dữ liệu --}}
    {{> airlines_management}}

{{!-- Xem chi tiết chuyến bay --}}
<div id="flight-details" class="overlay">
    <div class="dialog">
        <button class="close" onclick="hideFlightDetails()">x</button>
        <h2>Thông tin chi tiết chuyến bay</h2>
        <div class="form-group">
            <label for="flight-no">Số chuyến bay:</label>
            <input type="text" id="detail-flight-no" name="flight-no" disabled>
        </div>
    </div>
</div>
    <script src='{{static 'javascripts/admin.js'}}'></script>
</body>
</html>