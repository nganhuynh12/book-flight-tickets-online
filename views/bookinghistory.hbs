<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='{{static "stylesheets/searchticket.css"}}' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js'
    ></script>
  </head>

  <body>

    <div class='container'>
      <h1 class='text-center mt-5'>Lịch sử đặt vé</h1>

      <table class='table mt-5 bookinghistory'>
        <tr class='text-center text-white row-color-title'>
          <th>STT</th>
          <th>Mã đặt vé</th>
          <th>Mã chuyến bay</th>
          <th>Ngày khởi hành</th>
          <th>Thời gian</th>
          <th>Nơi đi</th>
          <th>Nơi đến</th>
          <th>Hạng vé</th>
          <th>Tổng thanh toán</th>
        </tr>
        {{#each ticketDatas}}
          <tr class='text-center'>
            <th>{{@index}}</th>
            <th>{{this.id}}</th>
            <th>{{this.flight.id}}</th>
            <th>18/04/2023</th>
            <th>20:00 - 21:30</th>
            <th>{{this.flight.startLocation.value}}</th>
            <th>{{this.flight.arriveLocation.value}}</th>
            <th>{{this.type}}</th>
            <th>{{this.price}}</th>
          </tr>
        {{/each}}
      </table>
    </div>

    <script src='/javascripts/searchTicket.js'></script>
  </body>
</html>